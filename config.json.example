{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout_sec": 30,
    "write_timeout_sec": 30
  },
  "storage": {
    "base_dir": "./data",
    "db_path": "./data/meta.db",
    "max_size_gb": 10,
    "eviction_policy": "lru",
    "folder_mode": "structured"
  },
  "torrent": {
    "max_active_torrents": 5,
    "max_connections_per_torrent": 40,
    "max_established_conns": 80,
    "upload_enabled": true,
    "seed_enabled": true,
    "ipv6_disabled": false
  },
  "transcoding": {
    "enabled": false,
    "ffmpeg_path": "/usr/bin/ffmpeg",
    "default_format": "mp3",
    "bitrate": "192k"
  },
  "logging": {
    "level": "info",
    "format": "json"
  }
}
